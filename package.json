{
  "name": "kaguraswap",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "16"
  },
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "prepare": "husky install",
    "ci": "run-p lint build",
    "fix": "run-p fix:*",
    "fix:prettier": "yarn lint:prettier --write",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:sol": "yarn lint:sol --fix",
    "lint": "run-p lint:*",
    "lint:prettier": "prettier '**/*.{json,md,sol}' --ignore-path .gitignore --check",
    "lint:eslint": "eslint '**/*.{js,ts,jsx,tsx}' --ignore-path .gitignore",
    "lint:sol": "solhint 'packages/contracts/**/*.sol' --ignore-path .gitignore",
    "test": "run-p test:*",
    "test:sdk": "yarn workspace @kaguraswap/sdk test",
    "dev": "yarn build:sdk && run-p dev:*",
    "dev:common": "yarn workspace @kaguraswap/common dev",
    "dev:web": "yarn workspace @kaguraswap/web dev",
    "dev:hasura": "yarn workspace @kaguraswap/hasura dev",
    "build": "yarn build:sdk && yarn build:web",
    "build:common": "yarn workspace @kaguraswap/common build",
    "build:sdk": "yarn workspace @kaguraswap/sdk build",
    "build:web": "yarn workspace @kaguraswap/web build"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "eslint": "8.19.0",
    "eslint-config-next": "12.2.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-storybook": "^0.5.13",
    "firebase-tools": "11.1.0",
    "husky": "^8.0.1",
    "kill-port": "^2.0.1",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "tcp-port-used": "^1.0.2",
    "wait-on": "^6.0.1"
  },
  "lint-staged": {
    "*.{json,md,sol}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  }
}
