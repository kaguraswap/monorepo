{
  "name": "kaguraswap",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "prepare": "husky install",
    "ci": "run-p lint test build",
    "fix": "run-p fix:*",
    "fix:prettier": "yarn lint:prettier --write",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:sol": "yarn lint:sol --fix",
    "lint": "run-p lint:*",
    "lint:prettier": "prettier '**/*.{json,md,sol}' --ignore-path .gitignore --check",
    "lint:eslint": "eslint '**/*.{js,ts,jsx,tsx}' --ignore-path .gitignore",
    "lint:sol": "solhint 'packages/contracts/**/*.sol' --ignore-path .gitignore",
    "test": "run-p test:*",
    "test:contracts": "yarn workspace @kaguraswap/contracts test",
    "dev": "run-p dev:*",
    "dev:web": "yarn workspace @kaguraswap/web dev",
    "dev:storybook": "yarn workspace @kaguraswap/web storybook",
    "build": "run-p build:*",
    "build:web": "yarn workspace @kaguraswap/web build",
    "build:contracts": "yarn workspace @kaguraswap/contracts build"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "eslint": "8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1"
  },
  "lint-staged": {
    "*.{json,md,sol}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  }
}
